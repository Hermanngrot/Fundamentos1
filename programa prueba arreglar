#include <iostream>
#include <math.h>
using namespace std;

int main(){
    int n,s=0,e=0,d,c,a,f;
    double b;
    cout<<"ingrese el valor de n: ";
    cin>>n;
    d=n;
    while(n%10!=0){
    n=n/10;
    s++;
    }
    cout<<s<<endl;
    while(e<=s/2){
        if(s%2!=0){
            a=(pow(10,e+1));
            b=d%a;
            c=d/pow(10,s-(e+1));
            cout<<b<<endl;
            cout<<c<<endl;
            f=c-b;
            cout<<f;
        }
        else
            cout<<" no tiene diferencia";
        e++;
        
    }

    return 0;
}
