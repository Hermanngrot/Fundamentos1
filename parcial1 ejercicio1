#include <iostream>
using namespace std;
int main()
{
    float gasolina,diesel,etanol,total=0;
    cout<<"Ingrese la cantidad de litros de gasolina: ";
    cin>>gasolina;
    cout<<"Ingrese la cantidad de litros de diesel: ";
    cin>>diesel;
    cout<<"Ingrese la cantidad de litros de etanol: ";
    cin>>etanol;
    total=total+gasolina*3.50+diesel*4+etanol*2.5;
    cout<<"El total de ingresos en el dia es: "<<total<<" Bs";

    return 0;
}
