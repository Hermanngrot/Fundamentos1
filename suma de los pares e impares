#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    int numero,digito,sp=0,si=0;
    do {
        cout<<"Ingrse el numero: ";
        cin>>numero;
        }while(numero<=0);
        while(numero>0){
            digito=numero%10;
            numero=numero/10;
            if(digito%2==0){
                sp=sp+digito;
            }
            else {
                si=si+digito;
            }
        }
        cout<<"La suma de numeros pares es "<<sp<<endl;
        cout<<"La suma de numeros impares es "<<si;

    return 0;
}
