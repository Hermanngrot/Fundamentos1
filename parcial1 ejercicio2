#include <iostream>
using namespace std;
int main()
{
    float capital,tiempo,interes;
    cout<<"ingresar saldo: ";
    cin>>capital;
    cout<<"ingresar antiguedad: ";
    cin>>tiempo;
    if (tiempo>3&&capital>5000)
    cout<<"La tasa de interes es del 3%";
    else {
        if(tiempo>3&&capital<=5000)
        cout<<"La tasa de interes es del 2%";
        else{
            if (tiempo<=3&&capital>5000)
            cout<<"La tasa de interes es del 2.5%";
            else
            cout<<"La tasa de interes es del 1.5%";
        
        }
    }

    return 0;
}
