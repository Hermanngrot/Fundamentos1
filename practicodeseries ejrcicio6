#include <iostream>
#include <math.h>
using namespace std;
int main(){
    float n,suma=0;
    int x;
    do {
    cout<<"Ingrese el valor de la variable n que desea sumar en la sumatoria: ";
    cin>>n;
    }while (n<=0);
    cout<<"Ingrese el valor de x: ";
    cin>>x;
    for(int i=1;i<=n;i++){
        suma=suma + pow(x,i);
        cout<<pow(x,i)<<"+";
    }
    cout<<"La sumatoria es de: "<<suma;
    

    return 0;
}
