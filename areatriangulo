#include <iostream>
#include <math.h>
using namespace std;
int main(){
   float a,b,c,s,A;
   cout<<"Ingresar valor de a: ";//salida
   cin>>a;//entrada
   cout<<"ingresar valor de b: ";//salida
   cin>>b;//entrada
   cout<<"ingresar valor de c: ";//salida
   cin>>c;//entrada
   s=(a+b+c)/2;//calcular semipermetros
   A=sqrt(s*(s-a)*(s-b)*(s-c));//Area del triangulo
   cout<<"el valor de A es: "<<A;
   return 0;
}
